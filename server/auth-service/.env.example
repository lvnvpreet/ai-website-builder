# Server Configuration
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@YOUR_DB_HOST:YOUR_DB_PORT/YOUR_DB_NAME

# JWT Authentication
JWT_SECRET=YOUR_JWT_SECRET_KEY_HERE # Use a strong, random string
JWT_EXPIRES_IN=1h # e.g., 1h, 15m, 7d

# JWT Refresh Token
REFRESH_TOKEN_SECRET=YOUR_REFRESH_TOKEN_SECRET_KEY_HERE # Use a different strong, random string
REFRESH_TOKEN_EXPIRES_IN=7d # e.g., 7d, 30d

# Redis
REDIS_URL=redis://YOUR_REDIS_HOST:YOUR_REDIS_PORT # e.g., redis://localhost:6379

# Add other environment-specific variables as needed
